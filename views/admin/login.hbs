<form id="form-suscripcion" action="/admin/login"  method="post">
		<div>
		<h3 class="title-form">Suscribite para más info de lugares!</h3>
		<h4 class="subtitle-form" class="col-1">Tu nombre</h4>
		<input type="text" name="nombre" class="form-texto" style="max-width: 8.6em;"placeholder="nombre">
		<h4 class="subtitle-form">Mail:</h4>
		<input type="email" name="mail" class="form-email" style="max-width: 10.5em;"placeholder="hola@email.com">
		<h4 class="subtitle-form">Contraseña</h4>
		<input type="password" name="password" class="form-texto" style="max-width: 9.5em;"placeholder="******">
		<br>
        <button type="submit" class="form-button">SUSCRIBIRME♡</button>
        </div>
  
</form>
{{#if error}}
  <p style="color:white; font-weight: bolder; font-size: 1.4em;">Tu datos o contaseña han sido incorrectos, vuelve a intentar.</p>
  {{/if}}